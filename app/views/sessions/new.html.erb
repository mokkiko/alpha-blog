<h1 class="text-center mt-3">Log in</h1>

<div class="container">


<div class="row justify-content-center">
  <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow-sm p-3 mb-5 bg-info rounded", local: true)  do |f| %>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-lable text-light" %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "e-mail введите" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-lable text-light" %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "введите пароль" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "Log IN", class: "btn btn-outline-light btn-lg " %>

      </div>

      <% end %>

  </div>
  <div class="mb-3">
          <%= link_to 'Cancel and return to articles listing', articles_path, class: "text-info" %>
  </div>

  </div>
</div>
