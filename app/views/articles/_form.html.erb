<div class="container">


<div class="row justify-content-center">
  <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow-sm p-3 mb-5 bg-info rounded", local: true)  do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-lable text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Заголовок дневника"  %>
          </div>
      </div>

      <div class="form-group row">
        <%= f.label :discription, class: "col-2 col-form-lable text-light" %>
        <div class="col-sm-10">
          <%= f.text_area :discription, rows: 8, class: "form-control shadow rounded", placeholder: "Запись" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg " %>

      </div>

      <% end %>

  </div>
  <div class="mb-3">
          <%= link_to 'Cancel and return to articles listing', articles_path, class: "text-info" %>
  </div>

  </div>
</div>
